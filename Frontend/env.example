# Frontend Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# ENVIRONMENT DETECTION
# =============================================================================
# Set NODE_ENV to 'production' when deploying to production
NODE_ENV=development

# =============================================================================
# API CONFIGURATION - DYNAMIC ENVIRONMENT SUPPORT
# =============================================================================
# Backend API URL - Automatically detects environment
# For Development (localhost)
VITE_API_BASE_URL=http://localhost:5000/api

# For Production (Render deployment) - uncomment when deploying
# VITE_API_BASE_URL=https://intern-task-65q2.onrender.com/api

# Alternative: Auto-detect based on hostname (advanced)
# Leave VITE_API_BASE_URL empty to enable auto-detection
# VITE_API_BASE_URL=

# =============================================================================
# DEPLOYMENT URLS
# =============================================================================
# Production Backend URL
VITE_PRODUCTION_BACKEND_URL=https://intern-task-65q2.onrender.com

# Production Frontend URL
VITE_PRODUCTION_FRONTEND_URL=https://intern-task-nu7c.vercel.app

# Local Development URLs
VITE_LOCAL_BACKEND_URL=http://localhost:5000
VITE_LOCAL_FRONTEND_URL=http://localhost:3000

# =============================================================================
# GITHUB OAUTH CONFIGURATION
# =============================================================================
# GitHub OAuth Callback URL
# For Development
VITE_GITHUB_OAUTH_CALLBACK_URL=http://localhost:3000/auth/github/callback

# For Production - uncomment when deploying
# VITE_GITHUB_OAUTH_CALLBACK_URL=https://intern-task-nu7c.vercel.app/auth/github/callback

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application Name
VITE_APP_NAME=Test Case Generator

# Application Version
VITE_APP_VERSION=1.0.0

# =============================================================================
# OPTIONAL: MONITORING & ANALYTICS
# =============================================================================
# Optional: Analytics or monitoring keys (add if needed)
# VITE_ANALYTICS_ID=your_analytics_id
# VITE_SENTRY_DSN=your_sentry_dsn
# VITE_GOOGLE_ANALYTICS_ID=your_ga_id

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode in development
VITE_DEBUG_MODE=true

# API request timeout (milliseconds)
VITE_API_TIMEOUT=30000

# =============================================================================
# DEPLOYMENT CHECKLIST
# =============================================================================
# When deploying to production:
# 1. Set NODE_ENV=production
# 2. Update VITE_API_BASE_URL to production backend URL
# 3. Update VITE_GITHUB_OAUTH_CALLBACK_URL to production callback URL
# 4. Set VITE_DEBUG_MODE=false
# 5. Ensure your GitHub OAuth app has the production callback URL configured 